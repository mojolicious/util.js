{
  "name": "@mojojs/util",
  "version": "1.6.7",
  "description": "Utilities for mojo.js packages",
  "keywords": [
    "mojojs",
    "utils"
  ],
  "author": "Sebastian Riedel <kraih@mojolicious.org>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mojolicious/util.js.git"
  },
  "bugs": {
    "url": "https://github.com/mojolicious/util.js/issues"
  },
  "homepage": "https://mojojs.org",
  "scripts": {
    "build": "npx tsc --build ./",
    "build:clean": "npm run clean && npm run build",
    "build:coverage": "npm run build && npm run coverage",
    "build:lint": "npm run build && npm run lint",
    "build:test": "npm run build && npm test",
    "build:watch": "npm run build -- --watch",
    "clean": "rm -rf tsconfig.tsbuildinfo lib",
    "coverage": "c8 tap --disable-coverage --allow-empty-coverage test/*.js",
    "coverage:ci": "c8 --reporter lcovonly tap --disable-coverage --allow-empty-coverage test/*.js",
    "lint": "eslint \"test/*.js\" \"src/**/*.ts\" \"src/*.ts\"",
    "lint:fix": "npm run lint -- --fix",
    "prepublishOnly": "npm run build",
    "publish:minor": "npm version minor && npm publish",
    "publish:patch": "npm version patch && npm publish",
    "test": "tap --disable-coverage --allow-empty-coverage test/*.js"
  },
  "exports": "./lib/util.js",
  "types": "./lib/util.d.ts",
  "type": "module",
  "files": [
    "lib/"
  ],
  "devDependencies": {
    "@types/node": "^22.5.0",
    "@types/tap": "^15.0.3",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "c8": "^10.1.2",
    "eslint": "^9.10.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^5.0.0",
    "prettier": "^3.0.0",
    "tap": "^21.0.1",
    "typescript": "^5.0.2"
  },
  "engines": {
    "node": ">= 18"
  }
}
